@model IEnumerable<EventPlatFormVer4.Models.Event>

@{
    ViewData["Title"] = "Verify";
}

<h1>可报名活动列表</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayName("报名")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventStartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventEndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SignUpStartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SignUpEndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                     @Html.DisplayName("可报名")
                    </td>
                <td>
                    <a asp-action="Apply" asp-route-id="@item.Id">Apply</a> |
                </td>

            </tr>
        }
    </tbody>
</table>

