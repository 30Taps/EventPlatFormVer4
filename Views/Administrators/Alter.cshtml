@model IEnumerable<EventPlatFormVer4.Models.Event>

@{
    ViewData["Title"] = "Alter";
}

<h1>已审核活动列表</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUpEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayName("审核")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignUpEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @if (item.State == 1)
                {
                    @Html.DisplayName("通过")
                }
                else if (item.State == 2)
                {
                    @Html.DisplayName("未通过")
                }
            </td>
            <td>
                @if (item.State == 1)
                {
                    <a asp-action="Ban2" asp-route-id="@item.Id">Ban</a>
                }
                else if (item.State == 2)
                {
                    <a asp-action="Accept2" asp-route-id="@item.Id">Accept</a>
                }
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back</a>
</div>
